    ['X', 'X', 'X', 'X', 'X', 'X', 'X', 'R', 'X', 'S.', ' '],
];



for (let i=0;i<(hiddenMessage2.length);i++){
  for (let u=0;u<(hiddenMessage2[i].length);u++)
    if (hiddenMessage2[i][u]!="X"){
    console.log(hiddenMessage2[i][u]);
  }
}


